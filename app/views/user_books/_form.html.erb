<%= form_with(model: UserBook.new, url: user_books_path, local: true) do |form| %>
  <%= form.label "Find your book in list:", class: "block mb-4 text-md font-medium text-gray-900" %>

  <%= form.collection_select :book_id, @books, :id, :title, { include_blank: true }, class: "w-64 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-stone-500 focus:border-stone-500 p-2.5" %>

  <%= form.submit "Add Book", class: "mt-16 bg-transparent hover:bg-stone-500 text-stone-700 font-semibold hover:text-stone-100 py-2 px-4 border border-stone-700 hover:border-transparent rounded" %>
<% end %>
