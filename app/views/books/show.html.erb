<div class="bg-stone-200 rounded-lg shadow p-10">
  <div class="text-center">
    <h2 class="text-3xl font-bold"><%= @book.title %></h2>
    <h4 class="text-xl">(<%= @book.author.name %>)</h4>
  </div>
  <%= form_with(model: @note, url: notes_path, local:true, class: 'mx-auto md:w-2/4 my-14 px-2') do |f| %>

    <%= f.hidden_field :book_id, value: @book.id %>

    <div class="my-5">
      <%= f.rich_text_area :content, class: "bg-gray-50 " %>
    </div>

    <%= f.submit "Add note", class: "bg-transparent hover:bg-stone-500 text-stone-700 font-semibold hover:text-stone-100 py-2 px-4 border border-stone-700 hover:border-transparent rounded" %>
  <% end %>

  <div>
    <h2 class="text-center text-2xl pb-5">Your previous notes:</h2>

    <% @user_notes.each do |note| %>

      <div class="max-w-2xl p-5 bg-gray-50 border border-gray-200 rounded-lg shadow mx-auto my-5">
        <div class="mb-5">
          <p class="text-xs text-gray-400 mb-3 text-end"><%= note.created_at %></p>
          <p class="font-normal"><%= note.content %></p>
        </div>
        <%= link_to note_path(note), class: "mt-5 bg-transparent hover:bg-stone-500 text-stone-700 font-semibold hover:text-stone-100 py-2 px-4 border border-stone-700 hover:border-transparent rounded" do %>
          Read more
        <% end %>
      </div>
  
    <% end %>
  
  </div>
</div>
