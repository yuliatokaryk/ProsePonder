<div class="bg-stone-200 rounded-lg shadow p-10">
  <h2 class="text-center text-2xl pb-5"><%= @note.book.title %></h2>
  <div class="max-w-2xl p-5 bg-gray-50 border border-gray-200 rounded-lg shadow mx-auto my-5">
    <div class="mb-5">
      <p class="text-xs text-gray-400 mb-3 text-end"><%= @note.created_at %></p>
      <p class="font-normal"><%= @note.content %></p>
    </div>
    <%= button_to "Delete", note_path(@note), method: :delete, class: "mt-5 bg-transparent hover:bg-stone-500 text-stone-700 font-semibold hover:text-stone-100 py-2 px-4 border border-stone-700 hover:border-transparent rounded" %>
  </div>
</div>
