<% if @author.errors.any? %>
  <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
    <ul class="list-disc">
      <% @author.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @author, local:true, class: 'mx-auto md:w-2/4 my-14 px-2') do |f| %>
  <div class="flex flex-wrap -mx-3 mb-6 mt-6">
    <%= f.label 'name', class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
    <%= f.text_field :name, class:"sappearance-none block w-full bg-gray-100 text-gray-700 border border-gray-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
  </div>
  <%= f.submit "submit" %>
<% end %>
